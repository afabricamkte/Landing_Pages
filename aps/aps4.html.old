                const ingredientesSemEstoque = pizza.ingredientes.filter(ing => {
                    const estoqueAtual = estoque[ing.ingredienteId]?.quantidade || 0;
                    return estoqueAtual <= 0;
                });

                if (pizza.custoTotal > 15.0) {
                    row.classList.add('high-cost');
