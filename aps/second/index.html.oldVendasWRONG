                                    <select class="form-control" id="sort-cardapio" onchange="filterCardapio()">
                                        <option value="nome">Ordenar por Nome</option>
                                        <option value="categoria">Ordenar por Categoria</option>
                                        <option value="preco-direto">Ordenar por Pre√ßo Direto</option>
                                        <option value="preco-ifood">Ordenar por Pre√ßo iFood</option>
                                        <option value="margem">Ordenar por Margem</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Resumo de Configura√ß√µes -->
                            <div class="grid grid-2 mb-20">
                                <div class="card info">
                                    <div class="card-body">
                                        <h4>üöö Delivery Direto</h4>
                                        <p><strong>Margem:</strong> <span id="margem-direto-display">150%</span></p>
                                        <p><strong>Taxa Entrega:</strong> <span id="taxa-entrega-display">R$ 5,00</span></p>
                                    </div>
                                </div>
                                <div class="card warning">
                                    <div class="card-body">
                                        <h4>üçï iFood</h4>
                                        <p><strong>Margem L√≠quida:</strong> <span id="margem-ifood-display">49%</span></p>
                                        <p><strong>Taxa iFood:</strong> <span id="taxa-ifood-display">27%</span></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Lista do Card√°pio -->
                            <div id="cardapio-list">
                                <div class="empty-state">
                                    <div class="empty-icon">üìã</div>
                                    <h3>Nenhuma receita no card√°pio</h3>
                                    <p>Crie receitas primeiro para gerar o card√°pio automaticamente.</p>
                                    <button class="btn btn-primary" onclick="showTab('receitas')">
                                        Criar Receitas
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Estoque Tab -->
                <div id="estoque" class="tab-content">
                    <div class="empty-state">
                        <div class="empty-icon">üì¶</div>
                        <h3>M√≥dulo de Estoque</h3>
                        <p>Em desenvolvimento...</p>
                    </div>
                </div>

                <!-- Compras Tab -->
                <div id="compras" class="tab-content">
